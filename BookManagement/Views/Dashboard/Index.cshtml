@using BookManagement.Data;
@using Microsoft.EntityFrameworkCore;
@inject BookManagementDbContext _context;
@{
    BookManagementDbContext db = _context;
    int AdminCount = db.Admins.Count();
    int CategoryCount = db.Categories.Count();
    int BookCount = db.Books.Count();
    int totalview = 0;
    List<Chapter> lst = db.Chapters.ToList();
    foreach (var item in lst)
        if (item.TotalView != null)
            totalview = totalview + (int)item.TotalView;

    Layout = "_LayoutManage";
    ViewBag.Title = "";
    string us = ViewBag.Name;
}

